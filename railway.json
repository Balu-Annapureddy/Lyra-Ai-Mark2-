{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "/opt/venv/bin/pip install -r ai-worker/requirements-railway.txt"
    },
    "deploy": {
        "startCommand": "cd ai-worker && gunicorn -c gunicorn_railway.py app_lite:app",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 3
    }
}