{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "nixpacksPlan": {
            "phases": {
                "install": {
                    "cmds": [
                        "pip install -r ai-worker/requirements-railway.txt"
                    ]
                },
                "build": {
                    "cmds": [
                        "echo 'Skipping build phase'"
                    ]
                }
            },
            "providers": [
                "python"
            ]
        }
    },
    "deploy": {
        "startCommand": "cd ai-worker && gunicorn -c gunicorn_railway.py app_lite:app",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 3
    }
}