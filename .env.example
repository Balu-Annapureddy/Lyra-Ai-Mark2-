# Lyra AI Mark2 - Environment Configuration
# Copy this file to .env and fill in your values

# Server Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
PORT=8000

# CORS Configuration (comma-separated origins)
# Development
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
# Production (add your frontend URL when deploying)
# ALLOWED_ORIGINS=https://your-frontend.com,http://localhost:3000

# Model Configuration
DEFAULT_MODEL_MODE=hybrid  # offline-mini, offline-big, hybrid, cloud

# Cloud API Keys (optional - only needed for cloud mode)
# GOOGLE_API_KEY=your-gemini-api-key-here
# OPENAI_API_KEY=your-openai-api-key-here

# Vosk Model Path (optional)
# VOSK_MODEL_PATH=ai-worker/models/vosk-model-small-en-us

# Tesseract Path (optional - Windows only)
# TESSERACT_PATH=C:/Program Files/Tesseract-OCR/tesseract.exe

# Performance Mode (safe, balanced, performance)
PERFORMANCE_MODE=balanced

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
